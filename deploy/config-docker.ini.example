# MrDoc Docker部署配置文件示例
# 复制此文件为 config.ini 并根据实际情况修改配置

[site]
# True表示开启站点调试模式，False表示关闭站点调试模式
debug = False

[database]
# engine，指定数据库类型，接受sqlite、mysql、oracle、postgresql
engine = mysql
# name表示数据库的名称
name = mrdoc
# user表示数据库用户名
user = mrdoc_user
# password表示数据库用户密码
password = mrdoc_password
# host表示数据库主机地址
host = mysql
# port表示数据库端口
port = 3306

[cache]
# 缓存后端类型：locmem, redis, database, filebase, memcached
backend = redis
# 缓存位置
location = redis:6379

[media]
# 媒体文件URL前缀，默认为/media/
media_url = /media/
# 媒体文件存储路径，相对于项目根目录，默认为media
media_root = media

[locale]
# 默认站点语言为 中文简体，如需使用其他语言，请配置 language 参数
language = zh-hans
# 默认站点时区为 Asia/Shanghai，如需使用其他时区，请配置 timezone 参数
timezone = Asia/Shanghai

[ldap]
# LDAP认证配置
# 是否启用LDAP认证，true表示启用，false表示禁用
enable_ldap = false
# LDAP服务器地址
server_uri = ldap://your-ldap-server:389
# 绑定DN，用于连接LDAP服务器进行搜索
bind_dn = cn=admin,dc=example,dc=com
# 绑定密码
bind_password = password
# 用户搜索基础DN
user_base_dn = ou=users,dc=example,dc=com
# 用户搜索过滤器，{username}会被替换为实际的用户名
user_search_filter = (uid={username})
# 用户属性映射
user_attr_username = uid
user_attr_email = mail
user_attr_first_name = givenName
user_attr_last_name = sn

[session]
# 会话过期时间，秒数，默认7天
cookie_age = 604800
# 浏览器关闭即关闭会话
browser_close = False
# 安全Cookie状态
cookie_secure = False
# HttpOnly Cookie
cookie_httponly = True

[selenium]
# Selenium配置，用于文档导出功能
# 在容器环境下建议使用Chrome
driver = Chrome
# Chrome驱动路径，容器中一般不需要指定
# driver_path = 

[cors_origin]
# 允许的跨域请求来源，多个用逗号分隔
allow = 

[csrf_origin]
# 可信的CSRF来源，多个用逗号分隔
allow = 

[x_frame]
# X-Frame-Options设置
option = SAMEORIGIN

[preview]
# LibreOffice路径，用于文档预览
libreoffice_path = soffice

[image_upload]
# 允许上传的图片格式
suffix_name = jpg,jpeg,gif,png,bmp,webp

[attachment_suffix]
# 是否启用附件格式验证
is_enable = True

[extend_root_txt]
# 扩展根目录文本文件
filename = 

[email]
# 邮件配置
smtp_host = 
smtp_port = 587
send_emailer = 
username = 
pwd = 
smtp_ssl = False